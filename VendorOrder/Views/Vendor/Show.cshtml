@{
  Layout = "_Layout";
}

@using VendorOrder.Models;

<h1>List of Orders</h1>
<h2>for @Model["vendors"].Name</h2>

<ol>
@foreach ( Order order in @Model["orders"])
{
  <li><a href='/vendors/@Model["vendors"].Id/orders/@order.Id'>@order.Description</a></li>
}
</ol>

<div class="pages">
  <a href='/vendors/@Model["vendors"].Id/orders/new'>Add a new order</a>
  <br>
  <a href='/vendors'>Return to Vendor</a>
  <br>
  <a href="/">Home</a>
</div>