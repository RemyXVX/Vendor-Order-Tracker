@using VendorOrder.Models;

<h1>Vendors</h1>

@if (Model.Count == 0)
{
  <h4>No Current Vendors</h4>
}

@foreach(Vendor vendor in Model)
{
  <h4><a href="/vendors/@vendor.Id">@vendor.Name</a></h4>
  <p>@vendor.Description</p>
}

<h4><a href="/vendors/new">Make a new vendor</a></h4>
<p><a href="/">Home</a></p>