@{
  Layout = "_Layout";
} 

<h1>Add a new order for @Model.Name</h1>

<div class="add_order_info">
  <form action="/vendors/@Model.Id/orders" method="post">
    <label for="name">Order Type:</label>
    <input id="name" name="name" type="text" required>
    <br>
    <label for="description">Detail(s)</label>
    <input id="description" name="description" type="text" required>
    <br>
    <label for="date">Date:</label>
    <input id="date" name="date" type="date" required>
    <br>
    <label for="price">Cost:</label>
    <input id="price" name="price" type="price" required>
    <input value="@Model.Id" hidden>

    <button type="submit">ADD</button>
  </form>
</div> 

<div class="pages">
  <a href="/">Home</a>
</div>